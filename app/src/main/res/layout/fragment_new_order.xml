<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caue.splitter.MainPageActivity"
    android:id="@+id/new_order_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_marginStart="50dp"
            android:layout_alignBaseline="@+id/btn_NewOrder"
            android:layout_alignBottom="@+id/btn_NewOrder"
            android:layout_toEndOf="@+id/btn_NewOrder" />

        <Button
            android:text="Finalizar Pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_NewOrder"
            android:layout_marginBottom="31dp"
            android:layout_marginStart="54dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spn_OrderType"
            android:layout_marginTop="94dp"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_height="wrap_content"
            android:id="@+id/spn_Product"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_Produto"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Tipo do Produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:id="@+id/tv_tp_produto"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_marginBottom="35dp"
            android:layout_above="@+id/tv_Produto"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Produto"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/spn_OrderType"
            android:layout_alignStart="@+id/tv_tp_produto" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_Quantidade"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/tx_Quantidade"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_Quantidade"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/spn_Product"
            android:layout_alignStart="@+id/tv_Produto" />

        <TextView
            android:text="Observações"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_Observacoes"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/spn_Quantidade"
            android:layout_alignStart="@+id/tx_Quantidade" />

        <EditText
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/et_Observacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_below="@+id/tv_Observacoes"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>