<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@color/colorDarkGray"
    >
    <!-- android:background="@drawable/nav_drawer_bg" -->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/profile_picture_content_desc"
        android:src="@drawable/ic_user"
        />
    <!--
        android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_gravity="center_horizontal" -->

    <TextView
        android:id="@+id/user_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estabelecimento"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/user_profile_picture"
        android:layout_alignTop="@+id/user_profile_picture"
        android:textColor="@color/textColorWhite"

         />
    <!--android:layout_centerVertical="true"  -->

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesa"
        android:layout_below="@id/user_display_name"
        android:layout_toEndOf="@+id/user_profile_picture"
        android:textColor="@color/textColorWhite"
        />
</RelativeLayout>