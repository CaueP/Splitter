<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FFE8E8E8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"><![CDATA[>



        />


    ]]>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="72dp"
            android:id="@+id/recyclerView" />

        <TextView
            android:id="@+id/txt_pedidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="14dp"
            android:text="Valor Total:"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/recyclerView" />

        <TextView
            android:id="@+id/txt_total_conta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="R$ 32,00"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/txt_pedidos"
            android:layout_marginLeft="16dp"
            card_view:layout_constraintLeft_toLeftOf="@+id/txt_pedidos" />

        <Button
            android:id="@+id/btn_fechar_conta"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Fechar Conta"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@+id/recyclerView"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            card_view:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>