<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_produto"
                android:layout_width="358dp"
                android:layout_height="85dp"
                android:layout_gravity="center"
                android:elevation="3dp"
                android:fadingEdge="none"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="@dimen/card_margin"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp">>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"><![CDATA[>

                ]]>

                    <TextView
                        android:id="@+id/txt_nome_produto"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="Batata Frita"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:textStyle="normal|bold"
                        card_view:layout_constraintHorizontal_bias="0.9"
                        card_view:layout_constraintLeft_toLeftOf="parent"
                        card_view:layout_constraintRight_toLeftOf="@+id/txt_preco_produto"
                        card_view:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_descricao_produto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="72dp"
                        android:layout_marginTop="8dp"
                        android:text="Batatas fatiadas e fritas."
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp"
                        card_view:layout_constraintLeft_toLeftOf="parent"
                        card_view:layout_constraintRight_toRightOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@+id/txt_nome_produto"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/image_foto_produto"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="16dp"
                        android:adjustViewBounds="false"
                        card_view:layout_constraintBottom_toBottomOf="parent"
                        card_view:layout_constraintLeft_toLeftOf="parent"
                        card_view:layout_constraintRight_toLeftOf="@+id/txt_nome_produto" />

                    <TextView
                        android:id="@+id/txt_preco_produto"
                        android:layout_width="78dp"
                        android:layout_height="34dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="R$ 18,00"
                        android:textAlignment="viewStart"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        card_view:layout_constraintBottom_toTopOf="@+id/txt_descricao_produto"
                        card_view:layout_constraintRight_toRightOf="@+id/txt_descricao_produto"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintVertical_bias="0.0" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>