<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FFE8E8E8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_produto"
            android:layout_width="369dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:elevation="3dp"
            android:fadingEdge="none"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/card_margin"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent">>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"><![CDATA[>



                ]]>

                <TextView
                    android:id="@+id/txt_nome_produto"
                    android:layout_width="175dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:text="Batata Frita"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    card_view:layout_constraintLeft_toRightOf="@+id/image_foto_produto"
                    tools:layout_editor_absoluteY="15dp" />

                <ImageView
                    android:id="@+id/image_foto_produto"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:adjustViewBounds="false"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    card_view:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/txt_preco_individual"
                    android:layout_width="78dp"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:text="R$ 18,00"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="8dp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="15dp"
                    card_view:layout_constraintLeft_toRightOf="@+id/txt_quantidade"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:id="@+id/txt_quantidade"
                    android:layout_width="19dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="x2"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintLeft_toRightOf="@+id/txt_nome_produto"
                    android:layout_marginLeft="8dp" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView><![CDATA[

        />

    ]]>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>