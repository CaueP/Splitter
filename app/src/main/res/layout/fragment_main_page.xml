<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caue.splitter.MainPageActivity"
    android:id="@+id/main_page_fragment"
    android:tag="checkin_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/message_owner"
            android:layout_above="@+id/scan_qr_code_button"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/card_subtitle_margin"
            android:text="@string/msg_click_on_button_qrcode"
            android:textSize="20sp" />

        <Button
            android:id="@+id/scan_qr_code_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Capture QR Code"/>
    </RelativeLayout>

</LinearLayout>