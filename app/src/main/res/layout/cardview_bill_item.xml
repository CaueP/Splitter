<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FFE8E8E8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"><![CDATA[>

        ]]>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_produto"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/card_margin"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:elevation="3dp"
            android:fadingEdge="none"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/card_margin"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"><![CDATA[>

            ]]>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"><![CDATA[>

                ]]>

                <TextView
                    android:id="@+id/txt_nome_produto"
                    android:layout_width="128dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:text="Batata Frita"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:textStyle="normal|bold"
                    card_view:layout_constraintLeft_toLeftOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="72dp"
                    android:gravity="center"
                    android:text="5"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    tools:layout_editor_absoluteX="145dp"
                    tools:layout_editor_absoluteY="12dp" />

                <TextView
                    android:id="@+id/txt_preco_individual"
                    android:layout_width="78dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:text="R$ 18,00"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    card_view:layout_constraintRight_toRightOf="parent"
                    tools:layout_editor_absoluteY="12dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="74dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:text="R$ 18,00"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    card_view:layout_constraintLeft_toRightOf="@+id/textView6"
                    card_view:layout_constraintRight_toLeftOf="@+id/txt_preco_individual"
                    card_view:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>