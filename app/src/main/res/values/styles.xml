<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash Screen theme. Created to remove the title bar-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- PurpleTheme-->
    <!--<style name="DarkRedTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
    <!-- without action bar-->
    <style name="PurpleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPurplePrimary</item>
        <item name="colorPrimaryDark">@color/colorPurpleDark</item>
        <item name="colorAccent">@color/colorPurpleAccent</item>
        <item name="android:colorForeground">@color/colorPurpleAccent</item>
        <item name="android:navigationBarColor">@color/colorPurpleDark</item>
    </style>

    <!-- PurpleBlue Theme-->
    <style name="PurpleBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purpleBluePrimary</item>
        <item name="colorPrimaryDark">@color/purpleBluePrimaryDark</item>
        <item name="colorAccent">@color/purpleBlueAccent</item>
        <item name="android:textColorPrimary">@color/purpleBluePrimaryText</item>
        <item name="android:textColorSecondary">@color/purpleBlueSecondaryText</item>
        <item name="android:icon">@color/purpleBlueIcons</item>
        <item name="android:divider">@color/purpleBlueDivider</item>

        <item name="android:colorForeground">@color/purpleBlueAccent</item>
        <item name="android:navigationBarColor">@color/purpleBluePrimaryText</item>
    </style>

